{
  "name": "opmvpc/php-mvc",
  "description": "php mvc framework",
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\": "database/",
      "Framework\\": "framework/"
    }
  },
  "authors": [
    {
      "name": "opmvpc",
      "email": "thibsix@outlook.be"
    }
  ],
  "require-dev": {
    "pestphp/pest": "^2.24",
    "phpstan/phpstan": "^1.10",
    "symfony/var-dumper": "^6.3",
    "filp/whoops": "^2.15"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": [
      "@phpstan",
      "@pest"
    ],
    "phpstan": "phpstan analyse -c phpstan.neon --memory-limit 1G",
    "pest": "pest --parallel --display-warnings --display-notices --display-errors --stop-on-failure",
    "loc": "@php phploc-7.0.2.phar app/ database/ framework/ resources/ routes/ tests/"
  },
  "require": {
    "vlucas/phpdotenv": "^5.5",
    "ramsey/uuid": "^4.7"
  },
  "license": "MIT"
}
