{
  "name": "opmvpc/php-mvc",
  "description": "php mvc framework",
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\": "database/",
      "Framework\\": "framework/"
    }
  },
  "authors": [
    {
      "name": "opmvpc",
      "email": "thibsix@outlook.be"
    }
  ],
  "require": {
    "php": "^8.1",
    "vlucas/phpdotenv": "^5.5",
    "ramsey/uuid": "^4.7",
    "league/flysystem": "^3.10"
  },
  "require-dev": {
    "filp/whoops": "^2.15",
    "pestphp/pest": "^2.24",
    "pestphp/pest-plugin-type-coverage": "^2.4",
    "phpstan/phpstan": "^1.10",
    "symfony/var-dumper": "^6.3"
  },
  "scripts": {
    "test": [
      "@phpstan",
      "@pest"
    ],
    "test-ci": [
      "@phpstan",
      "@type",
      "@pestp --coverage"
    ],
    "phpstan": "phpstan analyse -c phpstan.neon --memory-limit 1G",
    "pest": "pest --display-warnings --display-notices --display-errors --stop-on-failure ",
    "pestp": "@pest --parallel",
    "type": "pest --type-coverage",
    "loc": "@php phploc-7.0.2.phar app/ database/ framework/ resources/ routes/ config/ tests/"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true
}
